{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "javac",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "cd ${fileDirname} && javac ${file} && java ${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
